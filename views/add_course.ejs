<body>
    <h2>College Course Registration</h2>

    <!-- This all needed converted to a form to be able to get called into the Mongo DB... The form div below is a cleaner more usesul version

      <div id="formContainer">
        <label for="courseNameInput">
            Course Name:
        </label>
        <input type="text" id="courseNameInput" placeholder="Enter Course Name...">
        <label for="descriptionInput">
            Course Description:
        </label>
        <textarea id="descriptionInput" placeholder="Enter Course Description..."></textarea>
        <label for="subjectAreaInput">
            Course Subject:
        </label>
        <input type="text" id="subjectAreaInput" placeholder="Enter Subject Area...">
        <label for="creditInput">
            Number of Credits:
        </label>
        <input type="number" id="creditInput" placeholder="Enter Number of Credits..."></textarea>
        <br>
        <button onclick="addData()">Add</button>
    </div> -->


    <form class="formalign" action="/add_course" method="POST" onsubmit="clearFormAfterSubmit()">
        <input type="text",
               name="courseName",
               placeholder="Enter the Course Name",
               required>
        
        <input type="text",
               name="courseDescription",
               placeholder="Enter the Course Description"
               required>

        <input type="text",
               name="courseSubject",
               placeholder="Enter the Course Subject",
               required>

        <input type="number",
               name="courseCredit",
               placeholder="Enter the Course Credit Amount",
               required>
        <button type="submit">Submit</button>
    </form>

    <!-- Displays all courses in the MongoDB or displays "No courses found" if database is empty -->
    <div style="white-space: pre-wrap;">
        <% if (message && message.length > 0) { %>
            <h2>Existing Courses</h2>
            <ul class="coursecontent" style="background-color: transparent;">
                <% message.forEach(function(course) { %>
                    <li> <%= course.courseName %> - <%= course.courseDescription %> - <%= course.courseSubject %> - <%= course.courseCredit %> </li>
                    <% }); %>
            </ul>
        <% } else { %>
                <p>No courses found.</p>
            <% } %>
    </div>
</body>

</html>