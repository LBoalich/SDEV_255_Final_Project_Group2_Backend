<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration</title>
    <link rel="stylesheet" type="text/css" href="course_index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>

<body>

    <div class="navbar">
        <ul>
            <li><a href="/student_dashboard">Home</a></li>
            <li class="dropdown">
                <a href="javascript:void(0)" class="dropbtn">Course <i class="bi bi-arrow-down-short"></i></a>
                <div class="dropdown-content">
                    <a href="/student_view_schedule">View Schedule</a>
                    <a href="/student_course_index">View Courses</a>
                    <a class="active" href="/student_manage_courses">Manage Courses</a>
                </div>
            </li>
            <li><a href="/" onclick="localStorage.clear()">Sign Out</a></li>
        </ul>
    </div>

  
    <h1 id="title">Course Registration</h1>

    <div id="courseList">  
       
    </div>

    <button class="btnRegister"><a href="/student_dashboard">REGISTER</a></button>

     <script>
            const name = localStorage.getItem("user");
            const students = JSON.parse('<%- JSON.stringify(students) %>');
            const courses = JSON.parse('<%- JSON.stringify(courses) %>');
            let currentStudent = "";
            for (let student of students) {
                if (student.studentName == name) {
                    currentStudent = student;
                }
            }
            
            const cart = currentStudent.cart;
            let html = "";
            for (let courseId of cart) {
                console.log(courseId)
                for (let matchCourse in courses) {
                    console.log(matchCourse._id)
                    if (matchCourse._id == courseId) {
                        html += `<div id="course">
                            <p id="courseTitle"><strong>${matchCourse.name}</strong></p>
                            <p><strong>Subject Area:</strong> ${matchCourse.subject}</p>
                            <p><strong>Credits:</strong> ${matchCourse.credits}</p>
                            <p><strong>Descritpion:</strong> ${matchCourse.description}</p>  
                            <button class="btnAddDrop"><a href="/student_dashboard">Drop</a></button> 
                        </div>`
                    }
                }
             
            }

            // add html to document
            document.querySelector("#courseList").innerHTML = html;
        </script>

</body>
</html>