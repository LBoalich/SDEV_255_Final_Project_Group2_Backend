<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College Course Index</title>
    <link rel="stylesheet" type="text/css" href="course_index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>

<body>

    <div class="navbar">
        <ul>
            <li><a href="/student_dashboard">Home</a></li>
            <li class="dropdown">
                <a href="javascript:void(0)" class="dropbtn">Course <i class="bi bi-arrow-down-short"></i></a>
                <div class="dropdown-content">
                    <a href="/student_view_schedule">View Schedule</a>
                    <a class="active" href="/student_course_index">View Courses</a>
                    <a href="/student_manage_courses">Manage Courses</a>
                </div>
            </li>
            <li><a href="/">Sign Out</a></li>
        </ul>
    </div>

    <form id="studentIndexForm" method="GET" action="/student_course_index">
        <h1 id="title">Course Listing</h1>
        <div id="courseList"></div>
    </form>

    <script src="../app.js"></script>
    <script>
        // instantiate blank html
        let html = ""

        // Add courses to html courses
        for (let course of courses) {
            html += 
                `<div id="course">
                    <p><strong>Name:</strong> ${course.name}</p>
                    <p><strong>Subject Area:</strong> ${course.subject}</p>
                    <p><strong>Credits:</strong> ${course.credits}</p>
                    <p><strong>Descritpion:</strong> ${course.description}</p>
                </div>`
        }

        // add html to document
        document.querySelector("#courseList").innerHTML = html
    </script>
</body>

</html>