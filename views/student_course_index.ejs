<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College Course Index</title>
    <link rel="stylesheet" type="text/css" href="course_index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>

<body>

    <div class="navbar">
        <ul>
            <li><a href="/student_dashboard">Home</a></li>
            <li class="dropdown">
                <a href="javascript:void(0)" class="dropbtn">Course <i class="bi bi-arrow-down-short"></i></a>
                <div class="dropdown-content">
                    <a href="/student_view_schedule">View Schedule</a>
                    <a class="active" href="/student_course_index">View Courses</a>
                    <a href="/student_manage_courses">Manage Courses</a>
                </div>
            </li>
            <li><a href="/" onclick="localStorage.clear()">Sign Out</a></li>
        </ul>
    </div>

  
    <h1 id="title">Course Listing</h1>
    <div id="courseList">  
        <% courseArray.forEach(function(course) { %>
            <div id="course">
                <p id="courseTitle"><strong> <%= course.courseName %> </strong></p>
                <p><strong>Subject Area:</strong> <%= course.courseSubject %></p>
                <p><strong>Credits:</strong> <%= course.courseCredit %></p>
                <p><strong>Description:</strong> <%= course.courseDescription %></p>
                <div id="buttons">
                    <button class="btnAddDrop"><a href="/student_dashboard">Add</a></button>
                    <button class="btnAddDrop"><a href="/student_dashboard">Drop</a></button>
                </div>
            </div>
        <% }); %>
    </div>

</body>
</html>